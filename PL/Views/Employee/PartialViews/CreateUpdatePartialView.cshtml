@model EmployeeVM
@{
    var department = new SelectList(ViewBag.Departments,"Id","Name");
}
<div class="form-group">
    <label class=" col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" placeholder="Enter Name">
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label class=" col-form-label" asp-for="Age"></label>
    <input class="form-control" asp-for="Age" placeholder="Enter Age">
    <span asp-validation-for="Age" class="text-danger"></span>
</div>

<div class="form-group">
    <label class=" col-form-label" asp-for="Department"></label>
    <select class="form-control" asp-items="@department" asp-for="DepartmentId">
        <option value="@null">Select Department</option>
    </select>
</div>

<div class="form-group">
    <label class=" col-form-label" asp-for="Salary"></label>
    <input class="form-control" asp-for="Salary" placeholder="Enter Salary">
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>

<div class="form-group">
    <label class=" col-form-label" asp-for="Address"></label>
    <input class="form-control" asp-for="Address" placeholder="Enter Address">
    <span asp-validation-for="Address" class="text-danger"></span>
</div>

<div class="form-group">
    <label class=" col-form-label" asp-for="Email"></label>
    <input class="form-control" asp-for="Email" placeholder="Enter Email">
    <span asp-validation-for="Email" class="text-danger"></span>
</div>

<div class="form-group">
    <label class=" col-form-label" asp-for="Phone"></label>
    <input class="form-control" asp-for="Phone" placeholder="Enter Phone">
    <span asp-validation-for="Phone" class="text-danger"></span>
</div>

<div class="form-group">
    <label class=" col-form-label" asp-for="IsActive"></label>
    <input class="form-check" asp-for="IsActive">
    <span asp-validation-for="IsActive" class="text-danger"></span>
</div>