@model IEnumerable<DepartmentVM>
@{
    ViewData["Title"] = "Index";
}
<h1>All Departments</h1>
<br />
<a asp-action="Create" class="btn btn-success">Create New Department</a>
<br />
<br />
@if (TempData["MessageCreate"] is not null)
{
    <div class="alert alert-success">
        <h2>@TempData["MessageCreate"]</h2>
    </div>
}

@if (TempData["MessageDelete"] is not null)
{
    <div class="alert alert-danger">
        <h2>@TempData["MessageDelete"]</h2>
    </div>
}

@if (TempData["MessageUpdate"] is not null)
{
    <div class="alert alert-success">
        <h2>@TempData["MessageUpdate"]</h2>
    </div>
}
<br />
@if (Model?.Count()>0)
{

    <div class="mt-2">
        <form class="row offset-1" asp-action="Index">
            <div class="col-10">
                <input class="form-control" type="text" placeholder="Department's Name" name="searchValue" />
            </div>
            <div class="col-2">
                <input type="submit" class="btn btn-warning" value="Search" />
            </div>
        </form>
    </div>
    <br />


    <table class="table">
        <thead class="dark">
            <tr>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">DateOfCreation</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
            <tr>
                <th scope="col">@item.Code</th>
                <th scope="col">@item.Name</th>
                <th scope="col">@item.CreateAt</th>
                <partial name="_ButtonsPartialView" model=@item.Id></partial>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table">
        <thead class="dark">
            <tr>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">DateOfCreation</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
         <tr>
             <th scope="col"></th>
             <th scope="col"></th>
             <th scope="col"></th>
             <th scope="col"></th>
             <th scope="col"></th>
             <th scope="col"></th>
         </tr>
            
        </tbody>
    </table>
}